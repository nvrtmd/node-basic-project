<!--우측 콘텐츠 영역 -->
<div class="wrapper wrapper-content">
    <!--검색 영역 -->
    <div class="ibox-content m-b-sm border-bottom">
        <div class="row">
            <div class="col-sm-4">
                <div class="form-group">
                    <label class="control-label" for="OrderNo">제목</label>
                    <input type="text" class="form-control">
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    <label class="control-label" for="OrderName">작성자</label>
                    <input type="text" class="form-control">
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    <label class="control-label" for="MobileNo">게시 여부</label>
                    <input type="text" class="form-control">
                </div>
            </div>
        </div>
        <div class="text-center">
            <button type="button" class="btn btn-primary">조회</button>
            <a href="/board/create" class="btn btn-info">신규</a>
        </div>
    </div>

    <!--목록 영역 -->
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    <div class="table-responsive">

                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th width="10%">번호</th>
                                    <th width="40%">제목</th>
                                    <th width="10%">조회수</th>
                                    <th width="10%">게시 여부</th>
                                    <th width="10%">작성일</th>
                                </tr>
                            </thead>
                            <tbody class="hoverTblBody">
                                <% for(let i=0; i < postList.length; i++) { %>
                                    <tr>
                                        <td>
                                            <%=postList[i].post_id%>
                                        </td>
                                        <td>
                                            <%=postList[i].post_title%>
                                        </td>
                                        <td>
                                            <%=postList[i].post_views%>
                                        </td>
                                        <td>
                                            <%=postList[i].post_display%>
                                        </td>
                                        <td>
                                            <%=moment(postList[i].post_register_date).format('YY-MM-DD HH:mm')%>
                                        </td>
                                    </tr>
                                    <% } %>
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>

    </div>


</div>

<script>
    console.log("게시글 목록 페이지 로딩 완료");
</script>