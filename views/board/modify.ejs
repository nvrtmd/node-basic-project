<!--우측 콘텐츠 영역 -->
<div class="wrapper wrapper-content">
    <div class="ibox-content m-b-sm border-bottom">
        <form id="postForm" action="/board/create" method="post">
            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group">
                        <label class="control-label">제목</label>
                        <input id="postTitle" name="postTitle" value="<%=postData.post_title%>" type="text"
                            class="form-control">
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group">
                        <label class="control-label">내용</label>
                        <textarea name="postContents" class="form-control" rows="10"
                            cols="5"><%=postData.post_contents%></textarea>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-12">
                    <label class="control-label">게시 여부</label>
                    <div class="form-group" style="width: 30%">
                        <select id="postDisplay" name="postDisplay" class="form-control">
                            <option value=true>게시함</option>
                            <option value=false>게시안함</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="text-center">
                <input type="submit" class="btn btn-primary" value="등록">
                <a href="/board/list" class="btn btn-info">목록</a>
            </div>
        </form>
    </div>
</div>

<script>
    $(document).ready(function () {
        console.log("page loading completed");
    });

    $("#postForm").submit(function () {

        if ($("#postTitle").val() == "") {
            alert("제목을 입력해주세요.");
            $("#postTitle").focus();
            return false;
        }
        return true;
    });


</script>